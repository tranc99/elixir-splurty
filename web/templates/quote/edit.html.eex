<h2>New Quote</h2>
<%= form_for @changeset, quote_path(@conn, :update, @quote.id), fn f -> %>
  <div class="form-group">

    <input type="text" class="form-control" name="quote[saying]" placeholder="Your Quote Here!" value="<%= @quote.saying %>">
    <br>
    <input type="text" class="form-control" name="quote[author]" placeholder="Author Name" value="<%= @quote.author %>">
    <br>
    <button type="submit" class="btn btn-success">Save</button>
  </div>
<% end %>
